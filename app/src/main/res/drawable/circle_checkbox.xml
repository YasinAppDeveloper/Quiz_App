<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FF0000"/> <!-- Circle color when checked -->
            <size android:width="48dp" android:height="48dp"/> <!-- Size of the circle -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
          <!-- Circle color when unchecked -->
            <stroke android:width="1dp" android:color="#000000"/> <!-- Border color -->
            <size android:width="48dp" android:height="48dp"/> <!-- Size of the circle -->
        </shape>
    </item>
</selector>
